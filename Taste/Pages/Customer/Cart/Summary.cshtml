@page
@using Microsoft.Extensions.Options
@model Taste.Pages.Customer.Cart.SummaryModel
@inject IOptions<Taste.Utility.StripeSettings> Stripe
@using Microsoft.Extensions.Options
@{
}

<form method="post">
    <br />
    @if (Model.detailCart.listCart.Count > 0)
    {
        <input asp-for="@Model.detailCart.listCart[0].ApplicationUserId" hidden />
        <div class="backgroundWhiteBorder">
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Order Summary
                        </div>
                        <div class="col-6 text-right">
                            <a asp-page="Index" classclass="btn btn-outline-info btn-sm">Back to Cart</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-6 pb-4">
                                    <div class="row">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-info">PickUp Details:</span>
                                        </h4>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Name</label>
                                        </div>
                                        <div class="col-9">
                                            <input id="txtName" asp-for="@Model.detailCart.OrderHeader.PickupName" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Phone Number</label>
                                        </div>
                                        <div class="col-9">
                                            <input id="txtPhone" asp-for="@Model.detailCart.OrderHeader.PhoneNumber" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Pickup Date</label>
                                        </div>
                                        <div class="col-9">
                                            <input id="datepicker" value="" asp-for="@Model.detailCart.OrderHeader.PickUpDate" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Pickup time</label>
                                        </div>
                                        <div class="col-9">
                                            <input id="timepicker" value="" asp-for="@Model.detailCart.OrderHeader.PickUpTime" type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Notes</label>
                                        </div>
                                        <div class="col-9">
                                            <textarea asp-for="@Model.detailCart.OrderHeader.Comments" class="form-control"></textarea>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-12 col-lg-5 offset-lg-1">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Order Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @{ var total = 0.0;}
                                        @foreach (var details in Model.detailCart.listCart)
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@details.MenuItem.Name</h6>
                                                    <small class="text-muted">Quantity: @details.Count</small>
                                                </div>
                                                <span class="text-muted">Php @(details.MenuItem.Price * details.Count)</span>
                                                @{ total += (details.MenuItem.Price * details.Count);}
                                            </li>
                                        }
                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <small class="text-info">Total</small>
                                            <strong class="text-info">@total.ToString("0.00")</strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-12 col-md-4 offset-md-8">
                                @{
                                    //convert amount to cents
                                    var OrderTotalForStrip = Model.detailCart.OrderHeader.OrderTotal * 100;
                                }
                                <script src="https://checkout.stripe.com/checkout.js"
                                        class="stripe-button"
                                        data-keyboard="@Stripe.Value.PublishableKey"
                                        data-amount="@OrderTotalForStrip"
                                        data-name="Taste Restaurant"
                                        data-label =" Place Order"
                                        data-description ="Defend Your Nation! Buy now pay later"
                                        data-locale="auto"
                                        data-allow-remeber-me="false"
                                        data-image="#"
                                       
                                ></script>
                              <script>document.getElementsByClassName("stripe-button-el")[0].style.display='none'</script>
                            <button type="submit" id="btnPlaceOrder" onclick="return validateInput()" value="Place Order" class="btn btn-success form-control">Place Order</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</form>

@section Scripts{
    <script>
        $(function () {
            $("#datepicker").datepicker({ minDate: 3, maxDate: "+1W" });
            $("#timepicker").timepicker({ "minTime": "11:00 AM", "maxTime": "07:00 PM", step: "30" });
        }
        );

        function validateInput() {
            var time = document.getElementById("timepicker").value;
            var date = document.getElementById("datepicker").value;
            var name = document.getElementById("txtName").value;
            var phone = document.getElementById("txtPhone").value;

            if (date.toString() == '') {
                swal("Error", "Please select pickup date", "error");
                return false;
            }

            if (time.toString() == '') {
                swal("Error", "Please select pickup time", "error");
                return false;
            }
            if (name.toString() == '') {
                swal("Error", "Please select pickup name", "error");
                return false;
            }
            if (phone.toString() == '') {
                swal("Error", "Please select pickup phone", "error");
                return false;
            }


        }
    </script>
}